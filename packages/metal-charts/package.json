{
	"name": "metal-charts",
	"version": "0.0.0",
	"description": "Metal.js wrapper for D3 and billboard.js",
	"license": "BSD",
	"repository": "liferay/metal-charts",
	"engines": {
		"node": ">=0.12.0",
		"npm": ">=3.0.0"
	},
	"main": "lib/MetalCharts.js",
	"jsnext:main": "src/MetalCharts.js",
	"files": [
		"lib",
		"src",
		"test"
	],
	"scripts": {
		"build": "npm run soy && webpack",
		"compile": "babel --presets metal -d lib/ src/",
		"postinstall": "npm run build",
		"prepublish": "npm run soy && npm run compile",
		"soy": "metalsoy --soyDeps node_modules/metal*/src/**/*.soy node_modules/clay*/src/**/*.soy",
		"start": "http-server . -p 4000",
		"test": "npm run soy && jest"
	},
	"keywords": [
		"metal"
	],
	"babel": {
		"presets": ["metal"]
	},
	"dependencies": {
		"bootstrap": "^3.3.6",
		"metal-soy": "^2.0.0"
	},
	"devDependencies": {
		"babel-cli": "^6.4.5",
		"babel-core": "^6.25.0",
		"babel-loader": "^7.0.0",
		"babel-plugin-transform-node-env-inline": "^0.1.1",
		"babel-preset-metal": "^4.0.0",
		"css-loader": "^0.28.4",
		"http-server": "^0.9.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^20.0.4",
		"metal-lerna-jest-resolver": "^1.0.0",
		"metal-jest-serializer": "^1.0.1",
		"metal-tools-soy": "^4.2.1",
		"node-sass": "^4.5.3",
		"sass-loader": "^6.0.6",
		"style-loader": "^0.18.2",
		"webpack": "^3.0.0"
	},
	"jest": {
		"resolver": "metal-lerna-jest-resolver",
		"snapshotSerializers": [
			"metal-jest-serializer"
		],
		"moduleNameMapper": {
			"^.+\\.scss$": "identity-obj-proxy"
		}
	}
}
