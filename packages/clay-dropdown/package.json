{
  "name": "clay-dropdown",
  "version": "2.0.0-rc.2",
  "description": "Clay Dropdown Component",
  "license": "BSD",
  "repository": "https://github.com/liferay/clay/tree/master/packages/clay-dropdown",
  "engines": {
    "node": ">=0.12.0",
    "npm": ">=3.0.0"
  },
  "main": "lib/all/dropdown.js",
  "esnext:main": "src/all/dropdown.js",
  "jsnext:main": "src/all/dropdown.js",
  "files": [
    "lib",
    "src",
    "test"
  ],
  "scripts": {
    "build": "npm run soy && webpack",
    "compile": "babel -d lib/ src/ -s --ignore src/__tests__",
    "prepublish": "npm run soy && npm run compile",
    "soy": "metalsoy --soyDeps '../../node_modules/clay-+(button|checkbox|icon|link|portal|radio)/src/**/*.soy'"
  },
  "keywords": [
    "clay",
    "metal"
  ],
  "dependencies": {
    "clay-button": "^2.0.0-rc.2",
    "clay-checkbox": "^2.0.0-rc.2",
    "clay-icon": "^2.0.0-rc.2",
    "clay-link": "^2.0.0-rc.2",
    "clay-portal": "^2.0.0-rc.2",
    "clay-radio": "^2.0.0-rc.2",
    "metal": "^2.16.0",
    "metal-component": "^2.16.0",
    "metal-dom": "^2.16.0",
    "metal-events": "^2.16.0",
    "metal-position": "^2.1.0",
    "metal-soy": "^2.16.0",
    "metal-state": "^2.16.0",
    "metal-web-component": "^2.16.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-node-env-inline": "^0.1.1",
    "babel-preset-env": "^1.6.0",
    "browserslist-config-clay-components": "^1.0.0-alpha.2",
    "clay": "^2.0.0-rc.2",
    "metal-dom": "^2.13.2",
    "metal-tools-soy": "^6.0.0",
    "webpack": "^3.0.0"
  },
  "browserslist": [
    "extends browserslist-config-clay-components"
  ]
}
