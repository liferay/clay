{namespace main}

/**
 */
{template .render}
	{@param content: ?}
	{@param? elementClasses: string}

	<div class="{$elementClasses ?: 'main'}">
		<main class="content">
			{$content}
		</main>
	</div>
{/template}

/**
 */
{template .topbar}
	{@param site: ?}

	<nav class="navbar navbar-inverse navbar-fixed-top">
		{call .logo data="all" /}
	</nav>
{/template}

/**
 */
{template .logo}
	{@param site: ?}

	<div class="navbar-header navbar-header-left-xs">
		<a class="navbar-brand" href="/">{$site.title}</a>
	</div>
{/template}

/**
 */
{template .menu}
	{@param site: ?}

	<div class="navbar-header navbar-header-right">
		<button aria-expanded="false" class="navbar-toggle collapsed" data-target="#navbarCollapseSite" data-toggle="collapse" type="button">
			<svg class="lexicon-icon">
				<use xlink:href="/vendor/lexicon/icons.svg#bars" />
			</svg>
		</button>
	</div>

	<div aria-expanded="false" class="navbar-collapse collapse" id="navbarCollapseSite">
		{call ElectricNavigation.render}
			{param depth: 1 /}
			{param elementClasses: 'nav navbar-nav navbar-right' /}
			{param linkClasses: '' /}
			{param listItemClasses: '' /}
			{param section: $site.index /}
		{/call}
	</div>
{/template}
