{namespace ClayGeomap}

/**
 * This renders the main element
 */
{template .render}
	{@param? _height: string}
	{@param? _width: string}
	{@param? id: string}

	{let $attributes kind="attributes"}
		{if $id}
			id="{$id}"
		{/if}

		style="
			{if $_width}
				width: {$_width};
			{/if}

			{if $_height}
				height: {$_height};
			{/if}
		"
	{/let}

	<div {$attributes}></div>
{/template}