{namespace ClayBadge}

/**
 * This renders a badge.
 */
{template .render}
	{@param? id: string}
	{@param label: number|string}
	{@param? style: string}

	{let $classes kind="text"}
		badge badge-pill
		{sp}badge-{$style ?: 'default'}
	{/let}

	<span class="{$classes}" id="{$id}">
		{$label}
	</span>

{/template}