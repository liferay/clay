{namespace ClayBadge}

/**
 * This renders a badge.
 */
{template .render}
	{@param label: string}
	{@param? elementClasses: string}
	{@param? id: string}
	{@param? style: string}

	{let $attributes kind="attributes"}
		class="badge
			{sp}badge-{$style ?: 'primary'}

			{if $elementClasses}
				{sp}{$elementClasses}
			{/if}
		"

		{if $id}
			id="{$id}"
		{/if}
	{/let}

	<span {$attributes}>
		<span class="badge-item badge-item-expand">{$label}</span>
	</span>
{/template}
