{namespace ClayDataProvider}

/**
 * This renders the component's whole content.
 */
{template .render}
	{@param content: any}
	{@param? errorContent: any}
	{@param? isError: bool}
	{@param? isLoading: bool}
	{@param? loadingContent: any}

	<div>
		{if $isLoading and $loadingContent}
			{$loadingContent}
		{elseif $isError and $errorContent}
			{$errorContent}
		{else}
			{$content}
		{/if}
	</div>
{/template}