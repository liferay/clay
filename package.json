		"css-loader": "^2.1.1",
		"eslint": "^6.5.1",
		"eslint-config-liferay": "^13.0.0",
		"jest": "^24.1.0",
		"jest-fetch-mock": "^2.0.1",
		"lerna": "^3.4.0",
		"ncp": "^2.0.0",
		"node-sass": "^4.12.0",
