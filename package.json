	},
	"workspaces": {
		"packages": [
			"packages/*"
		],
		"nohoist": [
			"gatsby",
			"**/@storybook/**/webpack",
			"**/@storybook/**/webpack/**"
		]
	},
	"resolutions": {
		"@pmmmwh/react-refresh-webpack-plugin": "0.5.1",
