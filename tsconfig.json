{
	"compilerOptions": {
		"esModuleInterop": true,
		"noEmit": true,
		"strict": true,
		"jsx": "react",
		"target": "es2015",
		"resolveJsonModule": true,
		"module": "esnext",
		"moduleResolution": "node",
		"removeComments": true,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@clayui/*": ["node_modules/@clayui/*/src"],
			"*": ["custom-types/*", "node_modules/*", "packages/*"]
		}
	},
	"include": ["packages/**/*"],
	"exclude": [
		"node_modules",
		"packages/**/lib",
		"packages/generator-clay-component"
	]
}
